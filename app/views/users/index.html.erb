<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">


  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>

  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to"",edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

  <%= form_for(@book,  url: books_path) do |f| %>

    <h2>New book</h2>
      <label>Title</label>
      <%= f.text_field :title,class: "col-xs-12" %>

      <h4>Opinion</h4>
      <%= f.text_field :body,class: "col-xs-12" %>
      <nav>

      <%= f.submit 'Create Book',class: "col-xs-12 btn btn-success" %>
      </nav>
      <% end %>
  </div>

  <div class= "col-md-9">
    <h2>Users</h2>
    <table class='table'>

    <% @users.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>
 </div>
 </div>